<h1>Richieste assistenza</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Descrizione</th>
      <th>Argomento</th>
      <th>Data di creazione</th>
    </tr>
  </thead>
  <tbody>
    <% if @assistance_requests.present? %>
      <% @assistance_requests.each do |request| %>
        <tr>
          <td><%= request.user.email %></td>
          <td><%= request.description %></td>
          <td><%= request.status %></td>
          <td><%= request.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="2">Nessuna richiesta trovata.</td>
      </tr>
    <% end %>
  </tbody>
</table>
