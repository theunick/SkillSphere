<%= form_with model: @assistance_request, url: create_assistance_request_account_path(@account), local: true do |form| %>
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
  
    <div>
      <%= form.label :status %>
      <%= form.select :status, options_for_select(['Pending', 'In Progress', 'Resolved']) %>
    </div>
  
    <div>
      <%= form.submit 'Create Assistance Request' %>
    </div>
<% end %>
  