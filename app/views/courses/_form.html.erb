<%= form_with(model: @course, local: true, html: { multipart: true }) do |form| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :category, "Category" %>
    <%= form.text_field :category %>
  </div>

  <div class="field">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price, "Price" %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :google_drive_file, "Seleziona un file da Google Drive" %>
    <button type="button" id="google-picker-btn">Google Drive</button>
  </div>

  <%= form.hidden_field :google_drive_file_ids, id: 'google-drive-file-ids' %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
